@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using StartBootsTrapMVC.Models
@model List<Detail>
@{
    ViewData["Title"] = "Index";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Blank Page</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th colspan="2" scope="col">Handle</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td><img width="100" src=@item.ImageURL /></td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td><a asp-controller="Detail" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">EDIT</a></td>
                    <td><a asp-controller="Detail" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">DELETE</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!-- /.container-fluid -->